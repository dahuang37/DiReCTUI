    </Page.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    Name="Back_Button" 
                    Click="Back_Button_Click"
                    Style="{DynamicResource SquareButtonStyle}">Go Back</Button>
        </StackPanel>
        <Controls:MetroTabControl Grid.Row="1" >
            <Controls:MetroTabItem >
                <Controls:MetroTabItem.Header>Map</Controls:MetroTabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" 
                        Background="AliceBlue">
                        <Border HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="24"><Run Text="Location"/></TextBlock>
                        </Border>
                    </StackPanel>
                

                    <bingMap:BingMap x:Name="map" Grid.Row="1" Height="700" VerticalAlignment="Stretch"  />

                    <!-- This stack panel is only used for testing purposes. It shows the user's GPS location for demo-->
                    <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Right" Width="250"  >
                        <Grid Background="Black" Opacity="0.5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Foreground="White"  Grid.Column="0" Target="{Binding ElementName=LatTxtBox}"  Content="Latitude:"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="LatTxtBox" Text="{Binding Latitude, UpdateSourceTrigger=PropertyChanged, StringFormat=N5, Mode=TwoWay}" />
                            <Label Grid.Row="1" Foreground="White" Opacity="1" Grid.Column="0" Target="{Binding ElementName=LongTxtBox}" Content="Longitude:"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="LongTxtBox" Text="{Binding Longitude, UpdateSourceTrigger=PropertyChanged, StringFormat=N5, Mode=TwoWay}"  />
                            <TextBlock Margin="15" FontSize="18" Grid.Row="2" Foreground="White" Text="{Binding Status}"></TextBlock>
                        </Grid>
                    </StackPanel>

                    <Grid Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" RenderTransformOrigin="-0.56,0.467" Margin="0,0,0,1" >
                        <StackPanel Orientation="Vertical" Margin="10" >
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />

                                </Grid.RowDefinitions>
                                <StackPanel Name="HideStack" 
                                    Orientation="Vertical" 
                                    Visibility="Collapsed" 
                                    Grid.Row="0" 
                                    Background="Transparent">
                                    <ListBox Name="SOPList" ItemsSource="{Binding Path=SOPTypes}" Background="Transparent">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>

                                                <TextBlock Width="Auto" 
                                                   Text="{Binding Title}"
                                                   Height="30"
                                                   Margin="10"
                                                   FontStyle="Normal"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Right">
                                            <Hyperlink  />
                                                </TextBlock>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                                <Button Grid.Row="1"
                        Name="Expander"
                        Width="70"
                        Margin="5"
                        Height="70"
                        Opacity="0.9"
                        Background="AliceBlue"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Style="{DynamicResource MetroCircleButtonStyle}"
                        Click="Expander_Click"
                        >
                                    <Rectangle Width="50" 
                               Height="50"
                               Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Visual="{StaticResource appbar_add}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>

                </Grid>
                <!--<StackPanel Grid.Row="3">
            <ContentPresenter Visibility="{Binding TemplateVisibility}" x:Name="CurrentPresenter" Content="{Binding }" ContentTemplate="{StaticResource DebrisFlowGeneral}" />
        </StackPanel>-->

            </Controls:MetroTabItem>

            <Controls:MetroTabItem Header="Record List">
                
            </Controls:MetroTabItem>
            <Controls:MetroTabItem Header="Background">

            </Controls:MetroTabItem>
            <Controls:MetroTabItem Header="Task View">

            </Controls:MetroTabItem>

        </Controls:MetroTabControl>
        <!-- Location Header -->
        
    </Grid>
</Page>
